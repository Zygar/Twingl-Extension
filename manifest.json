{
  "manifest_version": 2,

  "name": "Twingl",
  "description": "Development instance of the Twingl extension.",
  "version": "0.1",

  "permissions": ["<all_urls>"],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["annotator.min.css"],
      "js": ["jquery-2.0.3.min.js", "annotator.min.js", "twingl.js"]
    },
    {
      "matches": ["http://local.dev:5000/?code=*"],
      "js": ["oauth2/oauth2_inject.js"],
      "run_at": "document_start",
      "permissions": [
        "http://local.dev:5000/oauth/token"
      ]
    }
  ]
}