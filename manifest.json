{
  "manifest_version": 2,

  "name": "Twingl",
  "description": "Development instance of the Twingl extension.",
  "version": "0.1",

  "permissions": ["<all_urls>"],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "exclude_matches": ["*://medium.com/*", "*://kippt.com/*", "*://login.persona.org/*"], // TODO: We need a way to exclude URL patterns. // NB: This could also report problem sites.
      "css": ["vendor/annotator/annotator.min.css", "synapser.css"],
      "js": [
        "vendor/jquery-2.0.3.min.js",
        "vendor/annotator/annotator.min.js", 
        "vendor/annotator/plugins/oauth.js", 
        "vendor/annotator/plugins/store.js", 
        "annotator_synapses.js",
        "twingl_content.js"
        ]
    },
    {
      "matches": ["http://sandbox.twin.gl/robots.txt*"],
      "js": ["/oauth2/oauth2_inject.js"],
      "run_at": "document_start"
    }
  ],
  "background": {
    "scripts": ["/oauth2/oauth2.js", "background.js"]
  }
}
