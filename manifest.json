{
  "manifest_version": 2,

  "name": "Twingl",
  "description": "Development instance of the Twingl extension.",
  "version": "0.1",

  "permissions": ["<all_urls>"],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "exclude_matches": ["*://medium.com/*", "*://kippt.com/*"], // TODO: We need a way to exclude URL patterns. // NB: This could also report problem sites.
      "css": ["annotator.min.css"],
      "js": ["jquery-2.0.3.min.js", "annotator.min.js", "auth.js", "store.js", "twingl.js"]
    },
    {
      "matches": ["http://local.dev:5000/robots.txt*"],
      "js": ["oauth2/oauth2_inject.js"],
      "run_at": "document_start"
    }
  ],
  "background": {
    "scripts": ["/oauth2/oauth2.js", "background.js"]
  }
}
