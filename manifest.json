{
  "manifest_version": 2,

  "name": "Twingl",
  "description": "Development instance of the Twingl extension.",
  "version": "0.3",

  "permissions": [
    "http://*/*", 
    "https://*/*", 
    "storage",
    "tabs"
  ],
  "browser_action": {
    "default_icon": {
      "19": "icons/inactive.png",
      "38": "icons/inactive@2x.png"
      },
    "default_popup": "popup-signedout.html"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "css": ["vendor/annotator/css/annotator.css", "twingler.css"],
      "js": [
        "vendor/jquery-2.0.3.min.js",
        "vendor/annotator/annotator.min.js", 
        "vendor/annotator/plugins/oauth.js", 
        "vendor/annotator/plugins/store.js", 
        "annotator_synapses.js",
        "twingler.js"
        ]
    },
    {
      "matches": ["http://api.twin.gl/robots.txt*"],
      "js": ["/oauth2/oauth2_inject.js"],
      "run_at": "document_start"
    }
  ],
  "background": {
    "scripts": ["/oauth2/oauth2.js", "background.js"],
    "persistent": false
  },
  "web_accessible_resources": ["vendor/annotator/img/annotator-glyph-sprite.png", "vendor/annotator/img/annotator-icon-sprite.png"]
}
